extends ../../../layouts/authorization

block content

  .login-box-wrap
    section.login-box
      form.auth.clearfix( action='/caminio/initial_setup', method='post' )

        if message
          .message(class=(error ? 'error' : ''))=message

        .email-container
          input(type='text',name='domain_name',placeholder=t('setup.domain_name_desc'), style='width:444px;')
        .email-container
          input(type='text', name='email', placeholder=t('auth.email_address'), autocapitalize='off', autocorrect='off' )
        .password-container
          input(type='password', name='password', placeholder=t('auth.password') )

        button.btn(type='submit', title=t('setup.create'))
          i.fa.fa-arrow-right
        input(type='hidden', name='_csrf', value=csrf)
        section.meta-wrap
          a(href='/login')=t('back_to_login')