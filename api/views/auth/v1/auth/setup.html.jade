extends ../../../layouts/authorization

block content

  .login-box-wrap
    section.login-box
      form.auth.clearfix( action='/caminio/initial_setup', method='post' )

        if message
          if message.info
            .message=message.info
          if message.error
            .message.error=message.error

        .row-wrap
          .row
            .domain-container.col-md-12
              input(type='text',name='camDomainName',placeholder=t('setup.domain_name_desc'), style='width:444px;')
          .row
            .email-container.col-md-6
              input(type='text', name='email', placeholder=t('auth.email_address'), autocapitalize='off', autocorrect='off' )
            .password-container.col-md-6
              input(type='password', name='password', placeholder=t('auth.password') )

          .row
            .col-md-6
              button.btn.text-icon(type='submit')
                i.fa.fa-arrow-right
                =t('setup.create')
            input(type='hidden', name='_csrf', value=csrf)
        section.meta-wrap.row
          a(href='/login')=t('back_to_login')