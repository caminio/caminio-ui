extends ../../../layouts/authorization

block content

  .login-box-wrap
    section.login-box
      form.auth.clearfix( action='/caminio/reset_password', method='post' )

        if message
          if message.info
            .message=message.info
          if message.error
            .message.error=message.error

        .row-wrap
          .row
            .email-container.col-md-8
              input(type='text', name='email', placeholder=t('auth.email_address'), autocapitalize='off', autocorrect='off' )
            .col-md-2
              button.btn.text-icon(type='submit')
                =t('send_email')
                i.fa.fa-arrow-right
            input(type='hidden', name='_csrf', value=csrf)
        section.meta-wrap.row
          a(href='/caminio/login')=t('back_to_login')