extends ../../../layouts/authorization

block content

  .login-box-wrap
    section.login-box
      form.auth.clearfix( action='/caminio/reset_password', method='post' )

        if message
          if message.info
            .message=message.info
          if message.error
            .message.error=message.error

        .email-container
          input(type='text', name='email', placeholder=t('auth.email_address'), autocapitalize='off', autocorrect='off', style='width: 444px' )
        button.btn(type='submit', title=t('login'))
          i.fa.fa-arrow-right
        input(type='hidden', name='_csrf', value=csrf)
        section.meta-wrap
          a(href='/caminio/login')=t('back_to_login')