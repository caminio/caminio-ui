<div class="modal" id="password-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" {{action 'close'}}>
          <i class="fa fa-times"></i>
        </button>
        <h4 class="modal-title">{{t 'pic.change'}}</h4>
      </div>
      <div class="modal-body">
        <div class="preview" id="preview">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" {{action 'close'}}>{{t 'cancel'}}</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
