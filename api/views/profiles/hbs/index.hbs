<section class="main-wrapper">

  <header>
    <div class="box title-box website">
      <div class="main-ctrl">
        <button {{action 'changePassword'}} class="btn icon-text transparent">
          <i class="fa fa-lock"></i>
          {{t 'profile.change_password'}}
        </button>
      </div>
      <h1>
        {{t 'profile.my'}}
      </h1>

    </div>

  </header>

  <div class="default-padding">

    <div class="row">
      <div class="col-md-3 align-right">
        <div class="main-avatar">
          <img class="img-thumbnail" src='/images/bot_128x128.png'>
        </div>
      </div>

      <div class="col-md-9 profile-info">
        <h4 class="title">{{t 'profile.common'}}</h4>

        <div class="content">{{user.fullname}}</div>
        <div class="content"><a {{bind-attr href=user.mailto}}>{{user.email}}</a></div>
        <div class="content">{{user.phone}}</div>
      </div>

    </div>

  </div>

</section>