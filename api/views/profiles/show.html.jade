extends ../../../../caminio-ui/api/views/layouts/application

append head
  if env === 'production'
    link( rel='stylesheet', href='/stylesheets/caminio-profiles.min.css' )
  else
    link( rel='stylesheet', href='/stylesheets/caminio-profiles/profile.css' )

append foot

  if env === 'production'
    script(type='text/javascript', src='/javascripts/caminio-profiles.min.js')
  else
    script(type='text/javascript', src='/javascripts/caminio-profiles/locales/#{currentLang}.js')
    script(type='text/javascript', src='/javascripts/caminio-profiles/app.js')
           
  script(type="text/x-handlebars")
    include hbs/app.hbs

  script(type='text/x-handlebars' data-template-name='index')
    include hbs/index.hbs

  script(type='text/x-handlebars' data-template-name='password_modal')
    include hbs/password_modal.hbs

block content

  aside#notifications.notifications