<div class="main-ctrl align-right">
  <div class="search">
    <form>
      <input type="text" id="search-query" name="query">
      <button>
        <i class="fa fa-search"></i>
      </button>
    </form>
  </div>
  <a href="#events/new" class="btn primary"><i class="fa fa-plus"></i> <span data-i18n="caminio:ticketeer.event.new">Neuer Termin</span></a>
</div>

<table class="caminio">
  <thead>
    <tr>
      <th class="nr">{{t 'users.nr'}}</th>
      <th style="width: 20px"></th>
      <th>{{t 'name'}}</th>
      <th>{{t 'email'}}</th>
      <th>{{t 'last_login'}}</th>
      <th class="align-right">{{t 'actions'}}</th>
    </tr>
  </thead>

  <tbody>
    {{#each}}
    <tr>
      <td class="nr"></td>
      <td><i class="fa fa-gears"></i></td>
      <td>{{fullName}}</td>
      <td>{{email}}</td>
      <td>{{lastLoginAt}}</td>
      <td class="actions">
        <div class="btn-group">
          <a class="btn small" data-bind="attr: { href: '#users/'+id, title: $.i18n.t('users.edit') }"><i class="fa fa-pencil"></i></a>
          <a class="btn small" data-bind="click: lockItem, attr: { title: $.i18n.t('users.lock') }"><i class="fa fa-lock"></i></a>
          <a class="btn danger small" data-bind="click: deleteItem, attr: { title: $.i18n.t('users.delete') }"><i class="fa fa-times"></i></a>
        </div>
      </td>
    </tr>
    {{/each}}
  </tbody>

</table>